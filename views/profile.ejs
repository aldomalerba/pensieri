<!DOCTYPE html>
<html lang="it">
  <% include ./include/header %>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top">
      <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">Pensieri</a>
      </div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse ml-auto justify-content-end" id="navbarNavDropdown">
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="nav-link" href="/profile">Profile</a>
              <div class="dropdown-divider"></div>
              <a class="nav-link" href="/auth/logout">Esci</a>          
            </div>
          </li>
        </ul>
      </div>
    </div>
    </nav>
    <div class="container mt-2 pl-md-5 pr-md-5 pl-lg-5 pr-lg-5">
        <div class="row text-center mb-5">
            <div class="col">
                <img width="200" src="<%= picture %>" class="rounded-circle">
                <h5 class="mt-2"><%= name %></h5>
            </div>
        </div>
       <div id="grid" class="grid">
           <% for( var pensiero of pensieri ) { %>
            <square-post
              avatar="<%= pensiero.backgroundColor %>"
              showheader="false"
              showfooter="false"
              backgroundcolor="<%= pensiero.backgroundColor %>"
              textcolor="<%= pensiero.textColor %>"
              text="<%= pensiero.frase %>"         
              ></square-post>
           <% } %>
      </div> 
    </div>

  </body>
  <% include ./include/scripts %>
  <script src="/js/grid.js" type="text/javascript"></script>
  <% include ./include/footer %>
</html>
