<!DOCTYPE html>
<html lang="it">
  <% include ./include/header %>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white fixed-top justify-content-between">
      <div class="container">
      <div class="navbar-header">
        <a href="/" class="navbar-brand">Pensieri</a>
      </div>
      
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/form" id="btnForm">Scrivi</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/profile">Profile</a>
        </li>
      </ul>
    </div>
    </nav>
    <div class="container mt-2 pl-md-5 pr-md-5 pl-lg-5 pr-lg-5">
        <div class="row text-center mb-5">
            <div class="col">
                <img width="200" src="<%= picture %>" class="rounded-circle" alt="...">
                <h5 class="mt-2"><%= name %></h5>
            </div>
        </div>
       <div id="grid" class="grid">
           <% for( var pensiero of pensieri ) { %>
            <div class="square" style="background-color: <%= pensiero.backgroundColor %>;">
                <div class="content">
                 <div class="text-inner" style="color: <%= pensiero.textColor %>;"><%= pensiero.frase %></div>
                </div>
              </div>
           <% } %>
      </div> 
    </div>

  </body>
  <% include ./include/scripts %>
  <script src="/js/grid.js" type="text/javascript"></script>
  <% include ./include/footer %>
</html>
